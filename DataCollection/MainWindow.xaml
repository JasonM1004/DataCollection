        <dxlc:LayoutControl Header="Header" Orientation="Vertical" UseLayoutRounding="True" View="GroupBox">
            <dxlc:LayoutGroup>
                <dxlc:LayoutItem HorizontalAlignment="Right" Height="{Binding ActualHeight, ElementName=layoutGroup}" Label=" " LabelPosition="Top"/>
            </dxlc:LayoutGroup>
            <Button x:Name="Submit" Content="获取" HorizontalAlignment="Left" Height="19.2" VerticalAlignment="Top" Width="43.2" Click="Button_Click"/>
            <TextBlock HorizontalAlignment="Left" x:Name="TextBlock1" Height="148" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="494" Margin="0,0.4,-438.8,-133.2"/>
        </dxlc:LayoutControl>

    </Grid>
</Window>
